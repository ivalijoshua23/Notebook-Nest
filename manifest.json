{
  "manifest_version": 3,
  "name": "NotebookLM Pro Tree",
  "version": "17.9",
  "description": "Tree-structured folder organization for NotebookLM with Optimized Local Storage and Search.",
  "author": "Benju66",
  "permissions": ["activeTab", "scripting", "storage", "unlimitedStorage"],
  "host_permissions": [
    "https://notebooklm.google.com/*",
    "https://gist.githubusercontent.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["lz-string_min.js", "content.js", "note-popout.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ]
}